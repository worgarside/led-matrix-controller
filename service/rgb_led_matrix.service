[Unit]
Description=LED Matrix Display Service
After=multi-user.target
StartLimitBurst=10
StartLimitIntervalSec=10

[Service]
Type=simple
Restart=always
RestartSec=5
User=root
ExecStart=make run
EnvironmentFile=/home/pi/led-matrix-now-playing/.env
WorkingDirectory=/home/pi/led-matrix-now-playing

[Install]
WantedBy=multi-user.target
